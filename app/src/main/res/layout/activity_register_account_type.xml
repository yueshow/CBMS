<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/pageBackgroundStyle"
    tools:context="com.awesome.consumer.cbms.ui.activity.loginandregister.LoginActivity">
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ImageView
                android:id="@+id/img_company_type"
                android:layout_alignParentRight="true"
                android:src="@drawable/identity_selected"
                style="@style/imageView_RightV"/>
            <TextView
                android:id="@+id/tv_company_type"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/img_company_type"
                android:text="@string/company_user"
                style="@style/item_TextView_Left"/>
        </RelativeLayout>

        <include layout="@layout/line"/>

        <RelativeLayout
            android:id="@+id/rl_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ImageView
                android:id="@+id/img_personal_type"
                android:layout_alignParentRight="true"
                android:src="@drawable/identity_selected"
                style="@style/imageView_RightV"/>
            <TextView
                android:id="@+id/tv_person_type"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/img_personal_type"
                android:text="@string/personal_user"
                style="@style/item_TextView_Left"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_next"
            android:text="@string/next"
            style="@style/button_Next_Violet"
            android:layout_marginTop="70dp"/>

    </LinearLayout>

</LinearLayout>
